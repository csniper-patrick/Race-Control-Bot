[Unit]
Description=Live Race Control Messages Discord Bot - %i
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=-{{ sysconfig_dir }}/%i
WorkingDirectory={{ venv_path }}
ExecStart={{ venv_path }}/bin/python {{ venv_path }}/main.py
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
LimitNOFILE=65536
TasksMax=infinity

[Install]
WantedBy=multi-user.target